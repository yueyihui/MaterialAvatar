<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yue_liang.smaplematerialavatarview.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.example.yue_liang.materialavatarview.CombineAvatarView
        app:avatar_elevation="15"
        android:id ="@+id/combine0"
        android:layout_width="65dp"
        android:layout_height="65dp"/>

    <com.example.yue_liang.materialavatarview.CombineAvatarView
        android:id ="@+id/combine1"
        android:layout_marginTop="30dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/combine0"/>

    <com.example.yue_liang.materialavatarview.CombineAvatarView
        android:id="@+id/combine2"
        android:layout_marginTop="30dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/combine1"/>

</RelativeLayout>
